{
  "name": "@bifravst/azure",
  "version": "0.0.0-development",
  "description": "Microsoft Azure implementation of Bifravst",
  "scripts": {
    "postinstall": "check-node-version --package",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "test": "jest",
    "test:e2e": "node --unhandled-rejections=strict dist/feature-runner/run-features.js ./features --print-results --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bifravst/azure.git"
  },
  "bugs": {
    "url": "https://github.com/Bifravst/azure/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@azure/arm-iothub": "3.0.0",
    "@azure/cosmos": "3.9.1",
    "@azure/ms-rest-azure-js": "2.0.1",
    "@azure/ms-rest-js": "2.0.8",
    "@azure/ms-rest-nodeauth": "2.0.5",
    "@azure/storage-blob": "12.1.2",
    "@bifravst/device-ui-server": "2.0.0",
    "@bifravst/random-words": "4.2.1",
    "azure-iot-provisioning-service": "1.8.5",
    "azure-iothub": "1.12.5",
    "chalk": "4.1.0",
    "deepmerge": "4.2.2",
    "mqtt": "4.2.1",
    "node-fetch": "2.6.0",
    "snyk": "1.386.0",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@azure/arm-deviceprovisioningservices": "2.1.0",
    "@azure/functions": "1.2.2",
    "@bifravst/code-style": "8.0.48",
    "@bifravst/e2e-bdd-test-runner": "2.6.0",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-angular": "9.1.2",
    "@types/chai-subset": "1.3.3",
    "@types/chalk": "2.2.0",
    "@types/commander": "2.12.2",
    "@types/jest": "26.0.10",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.6.2",
    "@types/pem": "1.9.5",
    "@types/uuid": "8.3.0",
    "chai-subset": "1.6.0",
    "chalk": "4.1.0",
    "check-node-version": "4.0.3",
    "commander": "6.1.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "pem": "1.14.4",
    "run-node": "2.0.0",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npx tsc && npm test"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "snyk": true,
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
