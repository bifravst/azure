{
  "name": "@bifravst/azure",
  "version": "0.0.0-development",
  "description": "Microsoft Azure implementation of Bifravst",
  "scripts": {
    "postinstall": "check-node-version --package --print && npx tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bifravst/azure.git"
  },
  "bugs": {
    "url": "https://github.com/Bifravst/azure/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@bifravst/device-ui-server": "^1.1.0",
    "@bifravst/random-words": "^4.1.3",
    "deepmerge": "^4.1.1",
    "mqtt": "^3.0.0"
  },
  "devDependencies": {
    "@bifravst/code-style": "^5.0.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/node": "^12.7.12",
    "check-node-version": "^4.0.1",
    "husky": "^3.0.9",
    "typescript": "^3.7.0-beta"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}