{
  "name": "@bifravst/azure",
  "version": "0.0.0-development",
  "description": "Microsoft Azure implementation of Bifravst",
  "scripts": {
    "postinstall": "check-node-version --package",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bifravst/azure.git"
  },
  "bugs": {
    "url": "https://github.com/Bifravst/azure/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@azure/arm-iothub": "^3.0.0",
    "@azure/cosmos": "^3.7.2",
    "@azure/ms-rest-azure-js": "^2.0.1",
    "@azure/ms-rest-js": "^2.0.7",
    "@azure/ms-rest-nodeauth": ">=2.0.5 <3.0.0",
    "@azure/storage-blob": "^12.1.2",
    "@bifravst/device-ui-server": "^1.3.2",
    "@bifravst/random-words": "^4.2.0",
    "azure-iot-provisioning-service": "^1.8.3",
    "azure-iothub": "^1.12.3",
    "deepmerge": "^4.1.1",
    "mqtt": "^4.1.0",
    "snyk": "^1.348.2",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@azure/arm-deviceprovisioningservices": "^2.1.0",
    "@azure/functions": "^1.2.2",
    "@bifravst/code-style": "^8.0.2",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-angular": "^9.0.1",
    "@types/jest": "^26.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.14",
    "@types/pem": "^1.9.5",
    "@types/uuid": "^8.0.0",
    "check-node-version": "^4.0.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "pem": "^1.14.4",
    "run-node": "^2.0.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "snyk": true,
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
