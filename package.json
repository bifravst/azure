{
  "name": "@bifravst/azure",
  "version": "0.0.0-development",
  "description": "Microsoft Azure implementation of Bifravst",
  "scripts": {
    "postinstall": "check-node-version --package --print"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bifravst/azure.git"
  },
  "bugs": {
    "url": "https://github.com/Bifravst/azure/issues"
  },
  "homepage": "https://bifravst.github.io/",
  "keywords": [
    "Cloud",
    "IoT",
    "bifravst",
    "AssetTracker",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@azure/arm-iothub": "^3.0.0",
    "@azure/ms-rest-azure-js": "^2.0.1",
    "@azure/ms-rest-js": "^2.0.4",
    "@azure/ms-rest-nodeauth": "^2.0.5",
    "@bifravst/device-ui-server": "^1.1.2",
    "@bifravst/random-words": "^4.1.3",
    "azure-iot-provisioning-service": "^1.7.0",
    "azure-iothub": "^1.11.0",
    "deepmerge": "^4.1.1",
    "mqtt": "^3.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@azure/arm-deviceprovisioningservices": "^2.1.0",
    "@bifravst/code-style": "^6.0.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/node": "^13.1.1",
    "@types/pem": "^1.9.5",
    "@types/uuid": "^3.4.6",
    "check-node-version": "^4.0.2",
    "husky": "^4.0.10",
    "pem": "^1.14.3",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts",
      "git add"
    ]
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
